<div id="edit-userdata" v-cloak>
  <div class="container-fluid py-5">
    <h1 class="text-center">Edit User Data</h1>
    <div style="max-width: 500px;" class="mx-auto">
      <form action="/user/edit-user/:<%= editUser.id %>" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" id="name" name="name" value="<%= editUser.name %>">
        </div>
        <div class="form-group">
          <label for="age">Age</label>
          <input class="form-control" type="number" id="age" name="age" value="<%= editUser.age %>">
        </div>
        <div class="form-group">
          <label for="age">Address1</label>
          <input class="form-control" type="text" id="address1" name="address1" value="<%= editUser.address1 %>">
        </div>
        <div class="form-group">
          <label for="age">Address2</label>
          <input class="form-control" type="text" id="address2" name="address2" value="<%= editUser.address2 %>">
        </div>
        <div class="form-group text-center">
          <button class="btn btn-primary btn-sm btn-block" type="submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>