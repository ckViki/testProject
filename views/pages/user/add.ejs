<div id="add" v-cloak>
  <div class="container">
    <table class="table border-2">
      <tr class="text-center">
        <th>S.No</th>
        <th>Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let [index,user] of users.entries()) { %>
        <tr class="text-center">
          <td class="col-1">
            <%= index+1 %>
          </td>
          <td class="col-3">
            <%= user.name %>
          </td>
          <td class="col-2">
            <%= user.age %>
          </td>
          <td class="col-3">
            <%= user.address %>
          </td>
          <td class="col-3"><button class="btn btn-sm btn-primary" @click="editUser(<%= user.id %>)">Edit</button>
          </td>
        </tr>
        <% } %>
    </table>
  </div>
</div>

<script>
  async function editUser (data) {
     window.location.href = '/user/edit/'+ data;
 }
</script>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>